        <ResourceDictionary Source="pack://application:,,,/MLib;component/Controls/Menu/LightBrushs.xaml" />

        <ResourceDictionary Source="pack://application:,,,/MLib;component/Controls/TextBlock.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MLib;component/Controls/Label.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MLib;component/Controls/Hyperlink.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MLib;component/Controls/Button.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MLib;component/Controls/ListView.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MLib;component/Controls/ScrollBar.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MLib;component/Controls/ToolTip.xaml" />
