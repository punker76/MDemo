        <ResourceDictionary Source="pack://application:,,,/MLib;component/Controls/Expander.xaml" />

        <ResourceDictionary Source="pack://application:,,,/MLib;component/Themes/LightBrushs.xaml" />

        <!-- ResourceDictionary Source="pack://application:,,,/MLib;component/Controls/Dialogs/MessageDialog.xaml" / -->

        <!-- ResourceDictionary Source="pack://application:,,,/MsgBox;component/View/Modern/Themes/ModernUI.Light.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MsgBox;component/Themes/LightBrushes.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MsgBox;component/Themes/LightIcons.xaml" / -->
    </ResourceDictionary.MergedDictionaries>

    <!--Title bar-->

    <!--Close system button-->
    <sys:Double x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type reskeys:ResourceKeys},
                ResourceId=ControlCloseButtonWidthKey}">32</sys:Double>

    <!--System Button-->
    <sys:Double x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type reskeys:ResourceKeys},
                ResourceId=ControlSystemButtonHeightKey}">24</sys:Double>

    <sys:Double x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type reskeys:ResourceKeys},
                ResourceId=ControlSystemButtonWidthKey}">32</sys:Double>

</ResourceDictionary>
